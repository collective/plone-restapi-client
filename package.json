{
  "version": "0.2.0",
  "license": "MIT",
  "public": true,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": ["dist", "src"],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:ci": "tsdx test --ci",
    "test:husky": "NODE_ENV=test CI=true tsdx test --bail --colors",
    "typecheck": "tsc -b",
    "lint": "tsdx lint",
    "prepare": "tsdx build; is-ci || husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "release": "release-it"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "plone-restapi-client",
  "description": "A wrapper for plone.restapi for browser and nodejs needs",
  "author": "collective",
  "homepage": "https://github.com/collective/plone-restapi-client#readme",
  "repository": "https://github.com/collective/plone-restapi-client",
  "bugs": "https://github.com/collective/plone-restapi-client/issues",
  "keywords": [
    "plone",
    "restapi",
    "plone-restapi",
    "api-client",
    "api-wrapper"
  ],
  "module": "dist/plone-restapi-client.esm.js",
  "size-limit": [
    {
      "path": "dist/plone-restapi-client.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/plone-restapi-client.esm.js",
      "limit": "10 KB"
    }
  ],
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "refactor",
              "section": "Changes"
            },
            {
              "type": "chore",
              "section": "Maintenance"
            }
          ]
        }
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@release-it/conventional-changelog": "5.0.0",
    "@size-limit/preset-small-lib": "^4.10.2",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "release-it": "15.1.1",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "cross-fetch": "^3.1.4"
  }
}
