{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": ["dist", "src"],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:ci": "tsdx test --ci",
    "test:husky": "NODE_ENV=test CI=true tsdx test --bail --colors",
    "lint": "tsdx lint",
    "prepare": "tsdx build; is-ci || husky install",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "plone-restapi-client",
  "description": "A wrapper for plone.restapi for browser and nodejs needs",
  "author": "Piero Nicolli",
  "repository": "https://github.com/pnicolli/plone-restapi-client",
  "module": "dist/plone-restapi-client.esm.js",
  "size-limit": [
    {
      "path": "dist/plone-restapi-client.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/plone-restapi-client.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "cross-fetch": "^3.1.4"
  }
}
